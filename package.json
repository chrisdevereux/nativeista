{
  "name": "nativeista",
  "version": "0.0.0-development",
  "description": "A rebass-inspired set of UI primitives for react native apps",
  "main": "index.js",
  "author": "Chris Devereux",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@storybook/addon-actions": "^4.0.8",
    "@storybook/addon-links": "^4.0.8",
    "@storybook/addons": "^4.0.8",
    "@storybook/react": "^4.0.8",
    "@types/lodash": "^4.14.118",
    "@types/react": "^16.7.7",
    "@types/react-native": "^0.57.13",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "7",
    "babel-runtime": "^6.26.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-art": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-native-web": "^0.9.8",
    "react-svg-loader": "^2.1.0",
    "semantic-release": "^15.13.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "peerDependencies": {
    "react": "^16.6.3",
    "react-native-svg": "^8.0.8"
  },
  "dependencies": {
    "@emotion/core": "^10.0.4",
    "@emotion/native": "^10.0.4",
    "emotion-theming": "^10.0.4",
    "lodash": "^4.17.11",
    "react-native-size-matters": "^0.1.4",
    "recompose": "^0.30.0"
  },
  "scripts": {
    "typecheck": "tsc --noemit",
    "storybook": "start-storybook -p 6001",
    "build-storybook": "build-storybook",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noemit && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.(graphql|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisdevereux/nativeista.git"
  }
}
